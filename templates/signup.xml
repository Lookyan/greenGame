<fest:template xmlns:fest="http://fest.mail.ru"
    context_name="json">
      <div class="module">        
        <form class="form signup__form">
          <span class="signup__hint">Only letters, digits, dash and underscore</span>
          <input type="text" placeholder="Name" class="module__form_textbox" name="name" required="" pattern="^[a-zA-Z0-9_-]+$"/>
          <input type="email" placeholder="E-mail" class="module__form_textbox" name="email" required="" />
          <input type="password" placeholder="Password" class="module__form_textbox" name="password" required="" />
          <input type="submit" value="Sign up" class="module__form_button" />
          <a href="/#" class="login__js-back"> Back </a>
        </form>
      </div>
    
</fest:template>